{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "allowJs": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "declaration": true,
        "isolatedModules": true,
        "paths": {
            "domain/*": [
                "./src/app/domain/*"
            ],
            "infrastructure/*": [
                "./src/app/infrastructure/*"
            ],
        }
    },
    "include": [
        "./src"
    ]
}